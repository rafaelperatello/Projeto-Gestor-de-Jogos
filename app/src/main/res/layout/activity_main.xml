<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/ActivityColorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_dice"
            android:layout_weight="0.5"
            card_view:cardBackgroundColor="@color/CardColorBackground"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="@dimen/card_padding"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            card_view:cardCornerRadius="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/card_content_padding"
                android:tint="@color/main_tint_color"
                android:id="@+id/ImageViewDice"
                android:src="@drawable/dice"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_roulette"
            android:layout_weight="0.5"
            card_view:cardBackgroundColor="@color/CardColorBackground"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="@dimen/card_padding"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            card_view:cardCornerRadius="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/card_content_padding"
                android:tint="@color/main_tint_color"
                android:id="@+id/ImageViewRoulette"
                android:src="@drawable/roulette"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_chess"
            android:layout_weight="0.5"
            card_view:cardBackgroundColor="@color/CardColorBackground"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="@dimen/card_padding"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            card_view:cardCornerRadius="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/card_content_padding"
                android:tint="@color/main_tint_color"
                android:id="@+id/ImageViewChess"
                android:src="@drawable/chess"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_chronometer"
            android:layout_weight="0.5"
            android:padding="@dimen/card_content_padding"
            card_view:cardBackgroundColor="@color/CardColorBackground"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="@dimen/card_padding"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            card_view:cardCornerRadius="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/card_content_padding"
                android:tint="@color/main_tint_color"
                android:id="@+id/ImageViewChronometer"
                android:src="@drawable/chronometer"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
